<?xml version="1.0" encoding="utf-8"?>
<Project>
    <!-- Ensure proper native framework references for iOS apps consuming this package -->
    <ItemGroup Condition="$(TargetFramework.Contains('-ios'))">
        <!-- Include the xcframework resources that contain the native library -->
        <Content
            Include="$(MSBuildThisFileDirectory)../lib/net9.0-ios13.0/flic2lib.ios.resources/**/*">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <Link>flic2lib.ios.resources/%(RecursiveDir)%(Filename)%(Extension)</Link>
        </Content>
    </ItemGroup>

    <!-- Framework flags are set in .props file to avoid duplication -->
    <!-- Only -ObjC flag is added here for Objective-C category support -->
    <PropertyGroup Condition="$(TargetFramework.Contains('-ios'))">
        <MtouchExtraArgs>$(MtouchExtraArgs) -ObjC</MtouchExtraArgs>
    </PropertyGroup>
</Project>
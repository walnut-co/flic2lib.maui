<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flic2lib.Maui.Sample.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Hello, Flic!"
                FontSize="32"
                HorizontalOptions="Center"/>

            <Button
                Text="Init Flic"
                Clicked="OnInitClicked"
                HorizontalOptions="Center"/>

            <Button
                Text="Find Buttons"
                Clicked="OnFindClicked"
                HorizontalOptions="Center"/>

            <Button
                Text="Start listeners"
                Clicked="OnStartListenersClicked"
                HorizontalOptions="Center"/>

            <Button
                Text="Background Service Info"
                Clicked="OnBackgroundInfoClicked"
                HorizontalOptions="Center"
                BackgroundColor="LightBlue"/>

            <Label
                Text="Current count: 0"
                FontSize="18"
                FontAttributes="Bold"
                x:Name="CounterLabel"
                HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
